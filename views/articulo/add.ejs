<%- include("../layouts/header.ejs"); %>

<div class="new-products">
  <div class="container">
    
    <div class="col-12">
        <h1>Agregar Producto</h1>
    
        <form method="post" action="/insertar" enctype="multipart/form-data">
            <input type="hidden" name="iduser" value="1">
            <div class="form-group">
                <label for="nombre">Nombre</label>
                <input required id="nombre" placeholder="Nombre del producto" class="form-control" type="text"
                    name="nombre">
            </div>
            <div class="form-group">
                <label for="descripcion">Descripci√≥n</label>
                <input required id="descripcion" placeholder="descripcion del producto" class="form-control" type="text"
                    name="descripcion">
            </div>
            <div class="form-group">
                <label for="precio">Precio</label>
                <input required id="precio" placeholder="precio del producto" class="form-control" type="text"
                    name="precio">
            </div>
            <div class="form-group">
                <label for="Foto">Imagen</label>
                <input type="text" name="Foto" id="Foto" class="form-control">
            </div>
            <div class="form-group">
                <label for="manual">Manual</label>
                <input type="file" name="manual" id="manual" class="form-control">
            </div>
            <div class="form-group">
                <button class="btn btn-success">Guardar</button>
                &nbsp;<a href="/" class="btn btn-primary">Volver</a>
            </div>
        </form>
    </div> 


  </div>
</div>


